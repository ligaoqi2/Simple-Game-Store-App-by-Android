<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="193dp"
        android:layout_height="104dp"
        android:layout_marginTop="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/no_result_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/customorange"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_result_1"/>
        <ImageView
            android:layout_width="9dp"
            android:layout_height="6dp"
            android:src="@drawable/no_result_2"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="19dp" />
        <ImageView
            android:layout_width="9dp"
            android:layout_height="6dp"
            android:src="@drawable/no_result_3"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="19dp" />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="3dp"
            android:src="@drawable/no_result_4"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="70dp" />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:src="@drawable/no_result_5"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="32dp" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:src="@drawable/no_result_7"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="32dp" />
    </FrameLayout>

    <ImageView
        android:layout_width="7dp"
        android:layout_height="4dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="363dp"
        android:src="@drawable/no_result_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="5dp"
        android:src="@drawable/no_result_8"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="370dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="84dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:layout_marginTop="451dp"
        android:text="暂无搜索结果"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="13sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>