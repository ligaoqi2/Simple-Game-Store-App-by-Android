<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <!--    1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1_layout_1"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/recycler_game_img_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recycler_game_view_1_layout_1"
        android:layout_width="86dp"
        android:layout_height="16dp"
        android:layout_below="@+id/card_view_1_layout_1"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="6dp"
        android:gravity="center"

        android:maxLines="1"
        android:ellipsize="end"

        android:text="hello"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recycler_game_brief_1_layout_1"
        android:layout_width="86dp"
        android:layout_height="12dp"
        android:layout_below="@+id/recycler_game_view_1_layout_1"
        android:layout_marginLeft="23dp"

        android:maxLines="1"
        android:ellipsize="end"

        android:gravity="center"
        android:text="hello"
        android:textSize="10sp" />

    <!--    2-->
